<!-- Decoración de fondo -->
<div class="background-decoration">
  <div class="bg-circle bg-circle-1"></div>
  <div class="bg-circle bg-circle-2"></div>
  <div class="bg-circle bg-circle-3"></div>
  <div class="bg-dots"></div>
  <div class="bg-line bg-line-1"></div>
  <div class="bg-line bg-line-2"></div>
</div>

<!-- Main Container -->
<div class="inscription-container">
  <!-- Hero Section -->
  <div class="inscription-hero">
    <div class="hero-content">
      <div class="hero-badge">
        <i class="fas fa-cogs"></i>
        <span>Formulario de Inscripción</span>
      </div>
      <h1 class="hero-title">Programa: <%= @program.titulo %></h1>
      <p class="hero-description"><%= @program.descripcion %></p>
    </div>
    <div class="hero-decoration">
      <div class="decoration-circle"></div>
      <div class="decoration-dots"></div>
    </div>
  </div>

  <!-- Progress Navigation -->
  <div class="progress-section">
    <div class="progress-wrapper">
      <div class="progress-bar">
        <div class="progress-fill" style="width: 30%"></div>
      </div>
      <div class="progress-steps">
        <div class="step active">
          <div class="step-circle">
            <i class="fas fa-user"></i>
          </div>
          <span class="step-label">Información Personal</span>
        </div>
        <div class="step">
          <div class="step-circle">
            <i class="fas fa-cogs"></i>
          </div>
          <span class="step-label">Innovación</span>
        </div>
        <div class="step">
          <div class="step-circle">
            <i class="fas fa-check"></i>
          </div>
          <span class="step-label">Confirmación</span>
        </div>
      </div>
    </div>
    
    <a href="<%= programas_tipo_path(@program.tipo) %>" class="back-button">
      <i class="fas fa-arrow-left"></i>
      <span>Volver a programas</span>
    </a>
  </div>

  <!-- Form Card -->
  <div class="form-card">
    <%= form_with(model: @formulario, url: inscripcion_programa_path(@program), method: :post, local: true, class: "inscription-form") do |f| %>
      <%= hidden_field_tag :id, @program.id %>
      
      <!-- Error Messages -->
      <% if @formulario.errors.any? %>
        <div class="alert alert-error">
          <div class="alert-icon">
            <i class="fas fa-exclamation-triangle"></i>
          </div>
          <div class="alert-content">
            <h3>Se encontraron errores en el formulario</h3>
            <ul>
              <% @formulario.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <!-- Personal Information Section -->
      <div class="form-section">
        <div class="section-header">
          <div class="section-icon">
            <i class="fas fa-user-circle"></i>
          </div>
          <div class="section-title">
            <h2>Información Personal del Líder</h2>
            <p>Completa tus datos personales. Los campos con * son obligatorios.</p>
          </div>
        </div>

        <div class="form-grid">
          <!-- DNI Field (First) -->
          <div class="form-group full-width dni-group">
            <%= f.label :dni_lider, "Documento de Identidad (DNI) *", class: "form-label" %>
            <div class="input-container">
              <%= f.text_field :dni_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "Ingresa tu DNI de 8 dígitos",
                  maxlength: "8",
                  pattern: "[0-9]{8}" %>
              <div class="input-icon">
                <i class="fas fa-id-card"></i>
              </div>
            </div>
            <small class="form-hint">
              <i class="fas fa-info-circle"></i>
              Automáticamente buscaremos tus datos en RENIEC
            </small>
          </div>

          <!-- Nombres Field -->
          <div class="form-group">
            <%= f.label :nombre_lider, "Nombres *", class: "form-label" %>
            <div class="input-container">
              <%= f.text_field :nombre_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "Se completará automáticamente" %>
              <div class="input-icon">
                <i class="fas fa-user"></i>
              </div>
            </div>
          </div>

          <!-- Apellidos Field -->
          <div class="form-group">
            <%= f.label :apellidos_lider, "Apellidos *", class: "form-label" %>
            <div class="input-container">
              <%= f.text_field :apellidos_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "Se completará automáticamente" %>
              <div class="input-icon">
                <i class="fas fa-user"></i>
              </div>
            </div>
          </div>

          <!-- Email Field -->
          <div class="form-group">
            <%= f.label :correo_lider, "Correo Electrónico *", class: "form-label" %>
            <div class="input-container">
              <%= f.email_field :correo_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "ejemplo@correo.com" %>
              <div class="input-icon">
                <i class="fas fa-envelope"></i>
              </div>
            </div>
          </div>

          <!-- Phone Field -->
          <div class="form-group">
            <%= f.label :telefono_lider, "Teléfono *", class: "form-label" %>
            <div class="input-container">
              <%= f.telephone_field :telefono_lider, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "999 888 777" %>
              <div class="input-icon">
                <i class="fas fa-phone"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Innovation Project Section -->
      <div class="form-section">
        <div class="section-header">
          <div class="section-icon">
            <i class="fas fa-cogs"></i>
          </div>
          <div class="section-title">
            <h2>Proyecto de Innovación</h2>
            <p>Cuéntanos sobre tu proyecto innovador y disruptivo.</p>
          </div>
        </div>

        <div class="form-grid">
          <div class="form-group full-width">
            <%= f.label :nombre_proyecto, "Nombre del Proyecto *", class: "form-label" %>
            <div class="input-container">
              <%= f.text_field :nombre_proyecto, 
                  class: "form-input", 
                  required: true, 
                  placeholder: "Nombre de tu proyecto de innovación" %>
              <div class="input-icon">
                <i class="fas fa-lightbulb"></i>
              </div>
            </div>
            <small class="form-hint">
              <i class="fas fa-info-circle"></i>
              Escribe el nombre que identificará tu proyecto innovador durante el programa
            </small>
          </div>
        </div>
      </div>

      <!-- Terms and Conditions -->
      <div class="form-section">
        <div class="terms-container">
          <div class="checkbox-container">
            <%= check_box_tag :acepta_terminos, '1', false, required: true, id: "acepta_terminos", class: "form-checkbox" %>
            <label for="acepta_terminos" class="checkbox-label">
              <span class="checkbox-custom"></span>
              <span class="checkbox-text">Acepto los términos y condiciones *</span>
            </label>
          </div>
          <p class="terms-info">
            Al enviar este formulario, aceptas que tus datos serán procesados de acuerdo con nuestra 
            <a href="#" class="terms-link">Política de Privacidad</a>.
          </p>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="form-actions">
        <button type="button" class="btn btn-secondary" onclick="window.history.back();">
          <i class="fas fa-times"></i>
          <span>Cancelar</span>
        </button>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-paper-plane"></i>
          <span>Enviar Inscripción</span>
        </button>
      </div>
    <% end %>
  </div>
</div>

<!-- Footer -->
