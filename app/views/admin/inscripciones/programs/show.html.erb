  transition: all 0.3s ease;
}

.inscripcion-card:hover {
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.inscripcion-header {
  padding: 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  transition: background 0.3s ease;
}

.inscripcion-header:hover {
  background: #f9fafb;
}

.inscripcion-main {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex: 1;
}

.inscripcion-number {
  background: #f3f4f6;
  color: #6b7280;
  padding: 0.5rem 0.75rem;
  border-radius: 0.5rem;
  font-weight: 600;
  font-size: 0.875rem;
  flex-shrink: 0;
}

.inscripcion-info {
  flex: 1;
  min-width: 0;
}

