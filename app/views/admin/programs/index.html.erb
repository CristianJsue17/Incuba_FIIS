            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Inscripciones</dt>
              <dd class="text-lg font-medium text-gray-900">
                <%= Program.sum { |p| p.total_inscripciones } %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr class="bg-gray-50">
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Programa</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Encargado</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Publicación</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vencimiento</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Inscripciones</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @programs.each do |program| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <% if program.image.attached? %>
                      <%= image_tag program.image, class: "h-10 w-10 rounded-full object-cover" %>
                    <% else %>
                      <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                        <i class="fas fa-graduation-cap text-gray-400"></i>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= program.titulo %></div>
                    <div class="text-sm text-gray-500"><%= truncate(program.descripcion, length: 50) if program.respond_to?(:descripcion) %></div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                  <i class="fas fa-tag mr-1"></i><%= program.tipo_humanizado %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center text-gray-700">
                  <i class="fas fa-user mr-2 text-gray-400"></i>
                  <%= program.encargado %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                <div class="text-sm"><%= program.fecha_publicacion&.strftime("%d/%m/%Y") %></div>
                <div class="text-xs text-gray-500"><%= program.fecha_publicacion&.strftime("%H:%M") %> Hora</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                <div class="text-sm"><%= program.fecha_vencimiento&.strftime("%d/%m/%Y") %></div>
                <div class="text-xs text-gray-500"><%= program.fecha_vencimiento&.strftime("%H:%M") %> Hora</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="relative">
                  <% case program.estado %>
                  <% when 'activo' %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <i class="fas fa-play-circle mr-1"></i>Activo
                    </span>
                  <% when 'inactivo' %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                      <i class="fas fa-ban mr-1"></i>Inactivo
                    </span>
                  <% when 'pendiente' %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                      <i class="fas fa-clock mr-1"></i>Pendiente
                    </span>
                  <% when 'finalizado' %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                      <i class="fas fa-flag-checkered mr-1"></i>Finalizado
                    </span>
                  <% else %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                      <%= program.estado.humanize %>
                    </span>
                  <% end %>
                  
                  <!-- Dropdown para cambiar estado -->
                  <div class="absolute top-0 right-0 -mr-1">
                    <button class="estado-dropdown-btn text-gray-400 hover:text-gray-600 p-1" data-program-id="<%= program.id %>">
                      <i class="fas fa-chevron-down text-xs"></i>
                    </button>
                    <div class="estado-dropdown-menu hidden absolute right-0 mt-1 w-32 bg-white rounded-md shadow-lg py-1 z-20 border">
                      <% %w[activo pendiente finalizado inactivo].each do |estado| %>
                        <% unless estado == program.estado %>
                          <%= link_to "#", 
                              class: "block px-3 py-1 text-xs text-gray-700 hover:bg-gray-100",
                              data: { 
                                confirm: "¿Cambiar estado a #{estado}?",
                                program_id: program.id,
                                estado: estado
                              } do %>
                            <i class="fas <%= 
                              case estado
                              when 'pendiente' then 'fa-clock'
                              when 'activo' then 'fa-play-circle'
                              when 'finalizado' then 'fa-flag-checkered'
                              when 'inactivo' then 'fa-ban'
                              end
                            %> mr-1"></i>
                            <%= estado.humanize %>
                          <% end %>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                <div class="flex items-center">
                  <i class="fas fa-users mr-2 text-gray-400"></i>
                  <span class="text-sm font-medium"><%= program.total_inscripciones %></span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex space-x-2">
                  <%= link_to "#", 
                              class: "text-blue-600 hover:text-blue-900", 
                              title: "Ver detalles",
                              data: { action: "click->program#showDetails", id: program.id } do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  
                  <%= link_to edit_admin_program_path(program), 
                              class: "text-yellow-600 hover:text-yellow-900", 
                              title: "Editar programa" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          
          <% if @programs.empty? %>
            <tr>
              <td colspan="8" class="px-6 py-10 text-center text-gray-500">
                <div class="flex flex-col items-center justify-center">
                  <i class="fas fa-graduation-cap text-gray-400 text-5xl mb-3"></i>
                  <p class="text-lg font-medium">No hay programas disponibles</p>
                  <p class="text-sm mt-1">Crea un nuevo programa para comenzar</p>
                  <%= link_to new_admin_program_path, class: "mt-4 inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg shadow-sm hover:bg-blue-700 transition-colors" do %>
                    <i class="fas fa-plus-circle mr-2"></i> Crear primer programa
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <% if @programs.present? && @programs.respond_to?(:total_pages) && @programs.total_pages > 1 %>
        <div class="px-6 py-4 bg-white border-t border-gray-200">
          <div class="flex justify-between items-center">
            <div class="text-sm text-gray-700">
              Mostrando programas <%= @programs.offset_value + 1 %> a <%= @programs.offset_value + @programs.count %> de <%= @programs.total_count %>
            </div>
            <div class="flex space-x-2">
              <%= paginate @programs %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Esta función se ejecutará cuando la página se cargue y después de cada navegación con Turbo
  function initProgramFilters() {
    // Filtro de estado
    const filtroBtn = document.getElementById('filtroEstadoBtn');
    const filtroMenu = document.getElementById('filtroEstadoMenu');
    
    if (filtroBtn && filtroMenu) {
      // Función para alternar la visibilidad del menú
      function toggleFilterMenu(e) {
        e.stopPropagation();
        filtroMenu.classList.toggle('hidden');
      }
      
      // Función para cerrar el menú cuando se hace clic fuera
      function handleOutsideClick(e) {
        if (!filtroBtn.contains(e.target) && !filtroMenu.contains(e.target)) {
          filtroMenu.classList.add('hidden');
        }
      }
      
      // Limpiar event listeners previos (importante para evitar duplicados)
      const newFiltroBtn = filtroBtn.cloneNode(true);
      filtroBtn.parentNode.replaceChild(newFiltroBtn, filtroBtn);
      
      // Añadir nuevos event listeners al botón clonado
      newFiltroBtn.addEventListener('click', toggleFilterMenu);
      document.addEventListener('click', handleOutsideClick);
    }

    // Dropdowns de estado en cada fila
    initEstadoDropdowns();
    
    // FUNCIONALIDAD DE BÚSQUEDA
    initSearch();
  }

  function initEstadoDropdowns() {
    document.querySelectorAll('.estado-dropdown-btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.stopPropagation();
        const menu = this.nextElementSibling;
        
        // Cerrar otros menús
        document.querySelectorAll('.estado-dropdown-menu').forEach(otherMenu => {
          if (otherMenu !== menu) {
            otherMenu.classList.add('hidden');
          }
        });
        
        // Toggle del menú actual
        menu.classList.toggle('hidden');
      });
    });

    // Cerrar dropdowns al hacer click fuera
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.estado-dropdown-btn')) {
        document.querySelectorAll('.estado-dropdown-menu').forEach(menu => {
          menu.classList.add('hidden');
        });
      }
    });
  }

  // FUNCIÓN PARA LA BÚSQUEDA
  let searchTimeout;

  function initSearch() {
    const searchInput = document.getElementById('search-input');
    if (!searchInput) return;

    // Event listener para búsqueda en tiempo real
    searchInput.addEventListener('input', function(e) {
      clearTimeout(searchTimeout);
      const query = e.target.value.trim();
      
      // Si está vacío, buscar inmediatamente
      if (query === '') {
        doSearch('');
        return;
      }
      
      // Esperar 500ms antes de buscar
      searchTimeout = setTimeout(() => {
        doSearch(query);
      }, 500);
    });

    // Event listener para Enter y Escape
    searchInput.addEventListener('keydown', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        clearTimeout(searchTimeout);
        doSearch(e.target.value.trim());
      }
      
      if (e.key === 'Escape') {
        e.target.blur();
        if (e.target.value.trim() !== '') {
          doSearch('');
        }
      }
    });

    // Mostrar indicador de carga si existe
    showSearchLoading(false);
  }

  // Función para ejecutar la búsqueda
  function doSearch(query) {
    // Mostrar indicador de carga
    showSearchLoading(true);
    
    // Construir URL con parámetros
    const url = new URL(window.location.href);
    
    // Manejar parámetro de búsqueda
    if (query === '') {
      url.searchParams.delete('search');
    } else {
      url.searchParams.set('search', query);
    }
    
    // Mantener filtro de estado si existe
    const currentEstado = getUrlParameter('estado');
    if (currentEstado) {
      url.searchParams.set('estado', currentEstado);
    }
    
    // Navegar a la nueva URL
    window.location.href = url.toString();
  }

  // Función para mostrar/ocultar indicador de carga
  function showSearchLoading(show) {
    const loading = document.getElementById('search-loading');
    if (loading) {
      if (show) {
        loading.classList.remove('hidden');
      } else {
        loading.classList.add('hidden');
      }
    }
  }

  // Función para obtener parámetros de URL
  function getUrlParameter(name) {
    const urlParams = new URLSearchParams(window.location.search);
    return urlParams.get(name);
  }

  // Atajos de teclado globales
  function initGlobalKeyboardShortcuts() {
    document.addEventListener('keydown', function(event) {
      // Ctrl/Cmd + K para enfocar búsqueda
      if ((event.ctrlKey || event.metaKey) && event.key === 'k') {
        event.preventDefault();
        const searchInput = document.getElementById('search-input');
        if (searchInput) {
          searchInput.focus();
          searchInput.select();
        }
      }
    });
  }

  // Función principal que inicializa todo
  function initProgramPage() {
    initProgramFilters();
    initGlobalKeyboardShortcuts();
    
    // Enfocar búsqueda si hay parámetro
    const searchParam = getUrlParameter('search');
    const searchInput = document.getElementById('search-input');
    if (searchParam && searchInput) {
      setTimeout(() => {
        searchInput.focus();
        searchInput.setSelectionRange(searchInput.value.length, searchInput.value.length);
      }, 100);
    }
  }
  
  // Ejecutar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', initProgramPage);
  
  // También ejecutar después de cada carga con Turbo
  document.addEventListener('turbo:load', initProgramPage);
  document.addEventListener('turbo:render', initProgramPage);
  
  // Por si el documento ya está cargado
  if (document.readyState === 'interactive' || document.readyState === 'complete') {
    initProgramPage();
  }

  // Limpiar timeouts al salir de la página
  window.addEventListener('beforeunload', function() {
    if (searchTimeout) {
      clearTimeout(searchTimeout);
    }
  });
</script>