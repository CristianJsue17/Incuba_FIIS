    const firstInput = formDiv.querySelector('input[type="text"]:not([disabled])');
    if (firstInput) {
      setTimeout(() => firstInput.focus(), 300);
    }
    
    console.log("Cambiado a modo edici√≥n compacto");
  }
}

// =======================================
// === FUNCIONALIDAD DE AVATAR ===
