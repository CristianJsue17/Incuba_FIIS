<!-- Sección Programas con Carrusel -->
<section class="programs-section">
  <div class="programs-container">
    <h2 class="programs-title">Últimos Programas</h2>
    
    <div class="programs-wrapper">
      <!-- EL JAVASCRIPT CONVERTIRÁ ESTE GRID EN CARRUSEL AUTOMÁTICAMENTE -->
      <div class="programs-grid">
        <!-- Programas dinámicos de la base de datos -->
        <% @datos_home[:programas].each_with_index do |programa, index| %>
          <article class="program-card" 
                   data-aos="fade-up" 
                   data-aos-delay="<%= index * 100 %>"
                   data-type="<%= programa.tipo %>">
            
            <!-- Imagen del programa -->
            <div class="program-image">
              <% if programa.image.attached? %>
                <%= image_tag programa.image, 
                    alt: programa.titulo, 
                    class: "program-img" %>
              <% else %>
                <div class="program-placeholder">
                  <i class="fas fa-lightbulb"></i>
                  <span>Imagen no disponible</span>
                </div>
              <% end %>
              
              <!-- Badge del tipo de programa -->
              <div class="program-type-badge program-type-<%= programa.tipo %>">
                <%= programa.tipo_humanizado %>
              </div>
              
              <!-- Badge del estado del programa -->
              <div class="program-status-badge program-status-<%= programa.estado %>">
                <%= programa.estado.capitalize %>
              </div>
            </div>
            
            <!-- Contenido del programa -->
            <div class="program-content">
              <h3 class="program-title"><%= programa.titulo %></h3>
              <p class="program-description">
                <%= truncate(programa.descripcion, length: 120, separator: ' ') %>
              </p>
              
              <!-- Información adicional del programa -->
              <div class="program-meta">
                <div class="program-date">
                  <i class="far fa-calendar-alt"></i>
                  <span>Vence: <%= programa.fecha_vencimiento.strftime("%d/%m/%Y") %></span>
                </div>
                <div class="program-manager">
                  <i class="fas fa-user-tie"></i>
                  <span><%= programa.encargado %></span>
                </div>
              </div>
              
              <!-- Botones de acción -->
              <div class="program-actions">
                <%= link_to "#", class: "program-btn program-btn-secondary" do %>
                  <i class="fas fa-info-circle"></i>
                  Ver detalles
                <% end %>
                <%= link_to "#", class: "program-btn program-btn-primary" do %>
                  <i class="fas fa-rocket"></i>
                  Inscribirse
                <% end %>
              </div>
            </div>
          </article>
        <% end %>
      </div>
      
      <!-- Botón para ver todos los programas -->
      <div class="programs-cta">
        <%= link_to "/servicios", class: "programs-view-all-btn" do %>
          <span>Ver todos los programas</span>
          <i class="fas fa-arrow-right"></i>
        <% end %>
      </div>
    </div>
  </div>
</section>

