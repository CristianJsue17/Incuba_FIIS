  }

  .bg-dots {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(#e2e8f0 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.4;
  }

  .bg-line {
    position: absolute;
    background: linear-gradient(90deg, transparent 0%, #e2e8f0 50%, transparent 100%);
    height: 1px;
    width: 100%;
    opacity: 0.5;
