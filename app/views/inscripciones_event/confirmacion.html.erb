  .bg-line-1 {
    top: 30%;
    transform: rotate(-1deg);
  }

  .bg-line-2 {
    bottom: 35%;
    transform: rotate(1deg);
  }

  /* Container principal */
  .confirmation-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1rem;
    margin-top: 240px;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
  }

  /* Success Hero Section */
  .success-hero {
    background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
    border-radius: 1.5rem;
    padding: 3rem;
    margin-bottom: 2rem;
    color: white;
    position: relative;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .success-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.3;
  }

  .hero-content {
    flex: 1;
    position: relative;
    z-index: 2;
  }

  .success-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    animation: fadeInLeft 0.8s ease-out;
  }

  .hero-title {
    font-family: 'Poppins', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem;
    line-height: 1.2;
    animation: fadeInLeft 0.8s ease-out 0.2s both;
  }

  .hero-description {
    font-size: 1.125rem;
    margin: 0;
    opacity: 0.95;
    max-width: 500px;
    line-height: 1.6;
    animation: fadeInLeft 0.8s ease-out 0.4s both;
  }

  /* Success Animation */
  .success-animation {
    flex-shrink: 0;
    position: relative;
    z-index: 2;
  }

  .check-mark {
    width: 120px;
    height: 120px;
    position: relative;
  }

  .check-mark-circle {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    border: 3px solid rgba(255, 255, 255, 0.4);
    position: relative;
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    animation: scaleIn 0.8s ease-out 0.6s both;
  }

  .check-mark.animate .check-mark-stem {
    animation: checkmarkStem 0.3s ease-out 1.2s both;
  }

  .check-mark.animate .check-mark-kick {
    animation: checkmarkKick 0.2s ease-out 1.5s both;
  }

  .check-mark-stem {
    position: absolute;
    width: 3px;
    height: 20px;
    background: white;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
    transform-origin: bottom;
    opacity: 0;
  }

  .check-mark-kick {
    position: absolute;
    width: 12px;
    height: 3px;
    background: white;
    left: 40%;
    top: 58%;
    transform: rotate(-45deg);
    transform-origin: left;
    opacity: 0;
  }

  /* Progress Section */
  .progress-section {
    margin-bottom: 2rem;
    animation: fadeInUp 0.8s ease-out 0.8s both;
  }

  .progress-wrapper {
    max-width: 600px;
    margin: 0 auto;
  }

  .progress-bar {
    height: 6px;
    background-color: #f3f4f6;
    border-radius: 0.375rem;
    margin-bottom: 1rem;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #10b981, #34d399);
    border-radius: 0.375rem;
    transition: width 500ms cubic-bezier(0.4, 0, 0.2, 1);
    animation: progressComplete 1.5s ease-out 1s both;
  }

  .progress-steps {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 120px;
  }

  .step-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #f3f4f6;
    display: flex;
    align-items: center;
